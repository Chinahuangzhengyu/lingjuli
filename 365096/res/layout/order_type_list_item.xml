<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ab_layout_space" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/tv_order_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="jeep休闲T恤"
            android:textColor="@color/font_blak"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="待收货"
            android:textColor="@color/order_type_color"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <include layout="@layout/ab_layout_short_line" />

    <com.zhjl.qihao.view.ScrollViewIncludeListView2
        android:id="@+id/order_good_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@null"
        android:listSelector="@android:color/transparent"></com.zhjl.qihao.view.ScrollViewIncludeListView2>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/tv_sum_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="共计1件商品"
            android:textColor="@color/font_blak"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商    品：¥20" />

            <TextView
                android:id="@+id/tv_service_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="配送费：¥5" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="合计：¥25"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_18" />
    </RelativeLayout>

    <include
        android:id="@+id/status_line"
        layout="@layout/ab_layout_short_line" />

    <RelativeLayout
        android:id="@+id/rl_order_select"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_submit1"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/pay_dialog_ok_bg"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="#FD9E43"
                android:textSize="@dimen/text_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_submit4"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/pay_dialog_ok_bg"
                android:gravity="center"
                android:text="查询物流"
                android:textColor="#FD9E43"
                android:textSize="@dimen/text_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_submit2"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/pay_dialog_ok_bg"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="#FD9E43"
                android:textSize="@dimen/text_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_submit3"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/pay_dialog_ok_bg"
                android:gravity="center"
                android:text="已评价"
                android:textColor="#FD9E43"
                android:textSize="@dimen/text_16"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>