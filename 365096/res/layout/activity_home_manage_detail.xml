<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ab_header_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/img_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/img_home_binding_bg" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="26dp"
                android:text="住户姓名"
                android:textColor="@color/ff999999"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_bg" />

            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:gravity="right"
                android:textColor="@color/text_color_f1"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_home"
                app:layout_constraintLeft_toRightOf="@id/tv_home"
                app:layout_constraintRight_toRightOf="parent" />


            <View
                android:id="@+id/view_line"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_home_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:text="手机号"
                android:textColor="@color/ff999999"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line" />

            <TextView
                android:id="@+id/tv_phone_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:gravity="right"
                android:text=""
                android:textColor="@color/text_color_f1"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_phone"
                app:layout_constraintLeft_toRightOf="@id/tv_phone"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/view_line_two"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_value"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>


            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="小区"
                android:textColor="@color/ff999999"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_two"
                app:layout_constraintBottom_toTopOf="@id/view_line_three"
                 />

            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="16dp"
                android:gravity="right"
                android:textColor="@color/text_color_f1"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/tv_phone"
                app:layout_constraintTop_toBottomOf="@id/view_line_two"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/view_line_three"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_city_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>


            <TextView
                android:id="@+id/tv_door_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="门牌号"
                android:textColor="@color/ff999999"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/view_line_four"
                app:layout_constraintTop_toBottomOf="@id/view_line_three" />

            <TextView
                android:id="@+id/tv_door_number_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="16dp"
                android:gravity="right"
                android:textColor="@color/text_color_f1"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_door_number"
                app:layout_constraintLeft_toRightOf="@id/tv_door_number"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/view_line_four"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_door_number_value"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>

            <TextView
                android:id="@+id/tv_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:text="住户类型"
                android:textColor="@color/ff999999"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_four" />

            <TextView
                android:id="@+id/tv_user_type_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:gravity="right"
                android:text=""
                android:textColor="@color/text_color_f1"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_user_type"
                app:layout_constraintLeft_toRightOf="@id/tv_user_type"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/view_line_five"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_user_type_value"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>

            <TextView
                android:id="@+id/tv_is_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="是否通过审核"
                android:textColor="@color/ff999999"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/view_line_six"
                app:layout_constraintTop_toBottomOf="@id/view_line_five" />

            <RadioGroup
                android:id="@+id/rg_is_sure_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginRight="14dp"
                app:layout_constraintLeft_toRightOf="@id/tv_is_sure"
                app:layout_constraintTop_toBottomOf="@id/view_line_five"
                app:layout_constraintBottom_toTopOf="@id/view_line_six"
                app:layout_constraintRight_toRightOf="parent" >
                <RadioButton
                    android:id="@+id/rb_sure"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/car_choose_status"
                    android:text="是"
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp"
                    android:drawablePadding="10dp"
                    android:checked="true"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/rb_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/car_choose_status"
                    android:text="否"
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp"
                    android:drawablePadding="10dp"
                    android:layout_height="match_parent"
                    />
            </RadioGroup>

            <View
                android:id="@+id/view_line_six"
                app:layout_constraintTop_toBottomOf="@id/rg_is_sure_value"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:background="@drawable/circle_green_22"
                app:layout_constraintTop_toBottomOf="@id/view_line_six"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="提交"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>