<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 商品详情轮播-->
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/white" />

            <!-- 价格 和商品名称 ， 正常购买页面和 团购页面不一样 -->
            <LinearLayout
                android:id="@+id/l0"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="330dp"
                android:background="@drawable/shape_groupbuy_price_bg"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/l_groupbuy"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/tuanroubeijing_price">

                    <LinearLayout
                        android:id="@+id/l5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/new_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="现价"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/new_price"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="12.88"
                            android:textColor="@color/Navigate_title"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/l5"
                        android:background="@drawable/shape_groupbuy_tejia"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="5dp"
                        android:text="团购特价"
                        android:textColor="@color/white"

                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="17dp"
                        android:layout_toLeftOf="@+id/r4"
                        android:background="@color/white" />


                    <!-- 倒计时 -->
                    <RelativeLayout
                        android:id="@+id/r4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp">


                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:text="团购倒计时"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t1"
                            android:orientation="horizontal">


                            <!-- 倒计时 时-->
                            <TextView
                                android:id="@+id/d_h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/daojishi_bg_s"
                                android:gravity="center"
                                android:text="18"
                                android:textColor="@color/white" />

                            <!-- 倒计时 分-->
                            <TextView
                                android:id="@+id/d_m"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:text=":" />

                            <!-- 倒计时 秒 -->
                            <TextView
                                android:id="@+id/d_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/daojishi_bg_s"
                                android:gravity="center"
                                android:text="18"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:text=":" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/daojishi_bg_s"
                                android:gravity="center"
                                android:text="18"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/comm_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="肚脐黄橙"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/comm_special"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="规格"
                            android:textColor="@color/grey_font"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/taungou_bg_3"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所选商品"
                            android:textColor="#EC0606"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="仅供自提"
                            android:textColor="#EC0606"
                            android:textSize="12sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <!-- 正在拼团人数  id = R.id.l1-->
            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/l0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_groupbuy_price_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="多少人正在拼团"
                        android:textColor="#EC0606" />

                    <TextView
                        android:id="@+id/lookAll_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="查看全部"
                        android:textColor="#FD9E44"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/unline" />


                <!--   <android.support.v7.widget.RecyclerView
                       android:id="@+id/all_recy"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />-->

                <com.zhjl.qihao.groupbuy.marquee.MarqueeView
                    android:id="@+id/marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 商品评价-->
            <RelativeLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_groupbuy_price_bg"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">


                <TextView

                    android:id="@+id/comm_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品评价"
                    android:textColor="@color/Navigate_title"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/lookAll_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查看全部"
                    android:textColor="#FD9E44"
                    android:textSize="12sp" />

            </RelativeLayout>

            <!--店铺 名称 和 logo-->
            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_groupbuy_price_bg">

                <LinearLayout
                    android:id="@+id/r11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/i_company_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/i_company_logo"
                        android:text=" erere  "
                        android:textColor="@color/font_blak"
                        android:textSize="16sp" />


                </LinearLayout>

                <View
                    android:id="@+id/v"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r11"
                    android:layout_marginTop="5dp"
                    android:background="@color/unline" />

                <!-- 评分 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="相符描述"
                            android:textColor="@color/color_goods_ordertv"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tt1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/t_xf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_goods_ordertv"
                                android:textSize="43dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/t_xf"
                                android:layout_marginLeft="6dp"
                                android:layout_toRightOf="@+id/t_xf"
                                android:text="星" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="服务态度"
                            android:textColor="@color/color_goods_ordertv"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tt2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/t_fw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_goods_ordertv"
                                android:textSize="43dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/t_fw"
                                android:layout_marginLeft="6dp"
                                android:layout_toRightOf="@+id/t_fw"
                                android:text="星" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="发货速度"
                            android:textColor="@color/color_goods_ordertv"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tt3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/t_fh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_goods_ordertv"
                                android:textSize="43dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/t_fh"
                                android:layout_marginLeft="6dp"
                                android:layout_toRightOf="@+id/t_fh"
                                android:text="星" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>

            <!-- 详情展示 -->
            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:background="@color/unline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:drawableRight="@drawable/xiangqingicon"
                    android:text="详情展示" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:background="@color/unline" />


            </LinearLayout>
            <!-- 展示详情内容-->
            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l3"
                android:background="@drawable/shape_groupbuy_price_bg"
                android:orientation="vertical">

                <!-- 用来展示详情的是一个web-->
                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="WebViewLayout" />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</ScrollView>