<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:id="@+id/rl_repair_record_item"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/circle_white_6">
    <com.zhjl.qihao.abrefactor.view.RoundImageView
        android:id="@+id/img_repair_record_pic"
        android:layout_width="106dp"
        app:round="6"
        android:layout_height="106dp"
        android:src="@drawable/img_loading"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_repair_record_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:textSize="12sp"
        android:layout_marginRight="16dp"
        android:textColor="@color/white"
        android:background="@drawable/circle_green_2"
        />
    <TextView
        android:layout_toLeftOf="@+id/tv_repair_record_status"
        android:id="@+id/tv_repair_record_title"
        android:layout_toRightOf="@+id/img_repair_record_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/text_color_f1"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_repair_record_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/img_repair_record_pic"
        android:layout_below="@+id/tv_repair_record_title"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/ff999999"
        android:lines="2"
        />
    <LinearLayout
        android:layout_toRightOf="@+id/img_repair_record_pic"
        android:layout_below="@+id/tv_repair_record_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_repair_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#bbbbbb"
            />
        <!---->
    </LinearLayout>
</RelativeLayout>