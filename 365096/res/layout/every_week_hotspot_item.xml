<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_gray_bg"
    android:layout_marginTop="20dp"
    android:id="@+id/hot_item"
    >
    <ImageView
        android:id="@+id/head_img"
        android:layout_width="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_head"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_toEndOf="@+id/head_img"
        android:layout_toLeftOf="@+id/tv_sort"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是标题"
        android:textStyle="bold"
        android:textColor="#444444"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是名称"
        android:layout_below="@+id/tv_title"
        android:layout_toEndOf="@+id/head_img"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="13dp"
        android:textSize="12sp"
        android:textColor="@color/green"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:textColor="@color/color_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表40分钟前"
        />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_below="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxHeight="150dp"
            android:lineHeight="18dp"
            android:textSize="12sp"
            android:lines="5"
            android:ellipsize="end"
            android:layout_marginRight="14dp"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/img_content"
            android:layout_width="96dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_height="64dp"
            android:src="@drawable/img_err"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="@color/color_orange"
        />
    <TextView
        android:id="@+id/tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000热度"
        android:layout_below="@+id/ll_content"
        android:layout_marginLeft="16dp"
        android:textSize="10sp"
        android:textColor="@color/color_orange"
        />
    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_toRightOf="@+id/tv_hot"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_content"
        android:text="已有234人参与评论"
        android:textSize="10sp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/green"
        />
</RelativeLayout>