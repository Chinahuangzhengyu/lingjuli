<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    style="@style/ref_root_layout_style"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/header_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="12dp"
            android:text="金额（¥）"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">
        <EditText
            android:id="@+id/et_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="请输入充值金额"
            android:background="@null"
            />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:background="@color/ff999999"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="132dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_top_up_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_16"
            android:text="请您选择支付方式"
            />
        <View
            android:id="@+id/v_pay_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/tv_top_up_title"
            android:background="@color/ffd1d1d1"/>
       <LinearLayout
           android:id="@+id/ll_pay_method"
           android:layout_below="@+id/v_pay_line"
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_height="70dp">
            <LinearLayout
                android:id="@+id/ll_zhifubao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="支付宝"
               />
           <ImageView
               android:id="@+id/img_zhifubao"
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:layout_marginLeft="10dp"
               android:src="@drawable/cz_zhifubao"
               />
       </LinearLayout>
           <View
               android:layout_width="1dp"
               android:layout_height="50dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:background="@color/color_333333"
               />

           <LinearLayout
               android:id="@+id/ll_weixin"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/img_weixin"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:src="@drawable/cz_weixin_an"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="微信"
                   />
           </LinearLayout>
       </LinearLayout>

        <View
            android:layout_alignBottom="@+id/ll_pay_method"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="1dp"
            android:background="@color/ffd1d1d1"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/text_18"
        android:textColor="@color/ff999999"
        android:layout_marginRight="12dp"
        android:enabled="false"
        android:text="下一步"
        android:layout_height="40dp" />

</LinearLayout>