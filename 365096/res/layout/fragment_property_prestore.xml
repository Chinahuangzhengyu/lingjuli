<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView android:id="@+id/iv_property_set" android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|right"
            android:paddingLeft="14dp"
            android:paddingBottom="14dp"
            android:paddingTop="10dp"
            android:paddingRight="10dip"
            android:src="@drawable/setting_icon"/>
        <ImageView android:layout_width="120dp"
            android:layout_height="120dp"
           />
        <TextView android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="预存物业管理费"
            android:textColor="#555555"/>
        <TextView android:id="@+id/tv_property_prestore" 
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="¥0"
            android:textColor="#f80000"/>
        <Button android:id="@+id/btn_topUp" android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="充值"
            android:textColor="@color/white"
            android:background="@drawable/btn_round_orange_two"
            />
        <Button android:id="@+id/btn_drawings_apply" android:layout_width="match_parent"
            android:layout_height="36dp"
             android:layout_marginTop="24sp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="转出申请"
            android:textColor="@color/white"
            android:background="@drawable/btn_round_blue"
            />
    </LinearLayout>

</LinearLayout>
