<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收  货  人: "
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t1"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/t1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="man"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="联系方式: "
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/t2"
            android:maxLength="11"
            android:text="phone"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t2"
                android:text="默认地址: "
                android:textColor="@color/new_theme_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/m_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/t3"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/t3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="默认地址"
                android:textColor="@color/new_theme_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1">

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址: "
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/a_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/t4"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t4"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="收货地址"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>