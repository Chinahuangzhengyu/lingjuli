<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/ab_header_bar"></include>

    <EditText
        android:id="@+id/et_membership_card_number"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:imeOptions="actionNext"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:lines="1"
        android:inputType="number"
        android:nextFocusForward="@+id/et_membership_card_password"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:hint="请输入会员卡卡号"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>

    <EditText
        android:id="@+id/et_membership_card_password"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:imeOptions="actionNext"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:lines="1"
        android:inputType="textPassword"
        android:nextFocusForward="@+id/et_card_pay_password"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:hint="请输入线下会员卡密码"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>

    <EditText
        android:id="@+id/et_card_pay_password"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:imeOptions="actionNext"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:lines="1"
        android:maxLength="6"
        android:inputType="numberPassword"
        android:nextFocusForward="@+id/et_phone_number"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:hint="请设置线上会员卡支付密码"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>
    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:imeOptions="actionNext"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:lines="1"
        android:inputType="number"
        android:maxLength="11"
        android:nextFocusForward="@+id/et_sms"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:hint="请输入手机号码"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_sms"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入短信验证码"
            android:imeOptions="actionDone"
            android:lines="1"
            android:inputType="text"
            android:textSize="16sp"
            android:maxLength="6"
            android:background="@null"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_get_sms"
            android:layout_width="98dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="获取验证码"
            android:textColor="@color/new_theme_color"
            android:textSize="14sp"
            android:background="@drawable/stroke_circle_green_14"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:background="@drawable/circle_d8d8d8_22"
        android:text="立即绑定"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>