<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <View android:id="@+id/v_line" 
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/list_line"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易时间:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_no_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交  易  号:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
    </LinearLayout><LinearLayout android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_community_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费小区:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
    </LinearLayout><LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_month_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费月份:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费房间:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
    </LinearLayout><LinearLayout android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_project_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费项目:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
    </LinearLayout><LinearLayout android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_payment_mode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_payment_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
    </LinearLayout><LinearLayout android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_should_fee_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应缴费用:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_should_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="¥0"
            android:textColor="@color/color_f80000"
            android:textSize="14sp" />
    </LinearLayout><LinearLayout android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView android:id="@+id/tv_transact_actual_fee_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实缴费用:"
            android:textColor="@color/color_555555"
            android:textSize="14sp" />
		<TextView android:id="@+id/tv_transact_actual_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="¥0"
            android:textColor="@color/color_f80000"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
