<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/iv_goods_picture"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:padding="1dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_goods_picture"
                android:layout_marginRight="8dp"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:text="¥90.00" />

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_goods_picture"
                android:layout_toLeftOf="@+id/price"
                android:layout_toRightOf="@+id/iv_goods_picture"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="法兰亚"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_goods_intr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_goods_title"
                android:layout_alignRight="@+id/tv_goods_title"
                android:layout_alignBottom="@+id/iv_goods_picture"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/color_888888"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_status_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_goods_picture"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_yellow_style"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:text="退款" />

            <TextView
                android:id="@+id/tv_product_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_alignRight="@+id/price"
                android:textColor="@color/color_888888"
                android:textSize="14sp" 
                android:text="X999" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
