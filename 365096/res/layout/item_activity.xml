<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_activity_pic"
            android:layout_width="60dp"
            android:src="@drawable/logo"
            android:layout_height="60dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动名称"
                android:textSize="16sp"
                android:textColor="@color/app_color" />

            <TextView
                android:id="@+id/tv_activity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="活动状态"
                android:textSize="14sp"
                android:textColor="@color/color_f80000" />

            <TextView
                android:id="@+id/activity_initiator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起人"
                android:layout_below="@id/tv_activity_name"
                android:textSize="12sp"
                android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/activity_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="参加:0,总人数:5"
                android:layout_below="@id/tv_activity_name"
                android:textSize="14sp"
                android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-01-12 12:30"
                android:layout_below="@id/activity_initiator"
                android:textSize="12sp"
                android:textColor="@color/color_888888" />

            <TextView
                android:id="@+id/activity_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动地址"
                android:layout_below="@id/activity_time"
                android:textSize="12sp"
                android:textColor="@color/color_888888" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/list_line" />
</LinearLayout>
