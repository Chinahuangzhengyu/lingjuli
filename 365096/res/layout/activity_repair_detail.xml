<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/ab_header_bar"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:layout_marginLeft="14dp"
                        android:layout_marginBottom="17dp"
                        android:textColor="@color/text_color_f1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_name_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:textColor="@color/new_theme_color"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:text="报修单号"
                        android:textColor="@color/ff999999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_number_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:textColor="@color/text_color_f1"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="54dp">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="房屋地址"
                        android:textColor="@color/ff999999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_address_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/text_color_f1"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"></View>
                <LinearLayout
                    android:id="@+id/ll_complaint_address"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_height="54dp">

                    <TextView
                        android:id="@+id/tv_address_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="地点和问题"
                        android:textColor="@color/ff999999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_address_detail_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/text_color_f1"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"></View>
                <RelativeLayout
                    android:id="@+id/rl_type"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:text="故障类型"
                        android:textColor="@color/ff999999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_fault_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:textColor="@color/text_color_f1"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"></View>

                <TextView
                    android:id="@+id/tv_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:text="故障描述："
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/circle_viewline_6"
                    android:gravity="start"
                    android:textColor="@color/text_color_f1"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <com.zhjl.qihao.abrefactor.view.GridViewForScrollView
                    android:id="@+id/gv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="14dp"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="3"
                    ></com.zhjl.qihao.abrefactor.view.GridViewForScrollView>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/activity_bg"
                    android:visibility="visible"></View>

                <LinearLayout
                    android:id="@+id/ll_finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="处理结果"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_f1"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="54dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="处理时间"
                            android:textColor="@color/ff999999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_result_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/text_color_f1"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view_line"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="54dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="处理人"
                            android:textColor="@color/ff999999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_result_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/text_color_f1"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view_line"></View>

                    <RelativeLayout
                        android:id="@+id/rl_case"
                        android:layout_width="match_parent"
                        android:layout_height="54dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="故障原因"
                            android:textColor="@color/ff999999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_fault_case"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/text_color_f1"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view_line"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_result_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="处理结果"
                            android:textColor="@color/ff999999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_result"
                            android:layout_toRightOf="@+id/tv_result_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="14dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/text_color_f1"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view_line"></View>

                    <TextView
                        android:id="@+id/tv_finish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="处理照片"
                        android:textColor="@color/text_color_f1"
                        android:textSize="16sp" />

                    <com.zhjl.qihao.abrefactor.view.GridViewForScrollView
                        android:id="@+id/gv_finish_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="3"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="10dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"></com.zhjl.qihao.abrefactor.view.GridViewForScrollView>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <Button
                android:id="@+id/btn_remind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_green_22"
                android:text="提醒处理"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/loading_framelayout"></include>

</RelativeLayout>