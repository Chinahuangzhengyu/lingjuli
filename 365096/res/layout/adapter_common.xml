<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_item_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tx_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:text="jkdkjalsjdkalsd"
            android:textColor="@color/color_555555"
            android:singleLine="true"
        	android:ellipsize="end"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tx_notreadnums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/tx_menu_title"
            android:layout_alignBaseline="@+id/tx_menu_title"
            android:background="@drawable/circle_red_bg2"
            android:gravity="center"
            android:text="99"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/content_gray"
        android:visibility="gone" />

</LinearLayout>