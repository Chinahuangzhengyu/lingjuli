<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    >
    <include layout="@layout/ab_header_bar"></include>

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/circle_white_6"
        android:drawableLeft="@drawable/img_phone"
        android:drawablePadding="16dp"
        android:hint="请输入手机号码"
        android:maxLength="11"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/text_color_f1"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_white_6"
        android:layout_marginRight="14dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_sms_code"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_sms_code"
            android:drawablePadding="16dp"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_color_f1"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:background="@color/view_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"></View>
        <TextView
            android:id="@+id/tv_get_sms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="获取验证码"
            android:textColor="@color/new_theme_color"
            android:textSize="14sp"
            android:gravity="center"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/circle_white_6"
        android:drawablePadding="16dp"
        android:hint="请设置6-20位新密码"
        android:maxLength="11"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/text_color_f1"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/et_sure_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/circle_white_6"
        android:drawablePadding="16dp"
        android:hint="请再次输入新密码"
        android:maxLength="11"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/text_color_f1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_password_check"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF2727"
        android:text="原始密码不正确！"
        />
    <Button
        android:id="@+id/btn_sure_update"
        android:layout_marginTop="128dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/circle_green_22"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />
</LinearLayout>