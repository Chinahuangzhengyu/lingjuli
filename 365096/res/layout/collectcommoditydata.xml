<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e8ebf0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/color_f5f5f5"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="法兰亚特旗舰店"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp" >

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/iv_goods_picture"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/iv_goods_picture"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="法兰亚特哈萨尔化妆品牌极致美容套餐"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_goods_picture"
                android:layout_alignRight="@+id/tv_goods_title"
                android:layout_toRightOf="@id/iv_goods_picture"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格："
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_goods_intr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="¥100"
                    android:textColor="@color/color_f80000"
                    android:textSize="14sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cbox_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_goods_picture"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/iv_goods_picture"
                android:checked="false"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_goods_picture"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/cbox_choice"
                android:contentDescription="@null"
                android:padding="1dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/color_e8ebf0" />
    </LinearLayout>

</LinearLayout>