<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView android:id="@+id/iv_goods_pic" 
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"/>
	<View android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/list_line"/>
	<TextView android:id="@+id/tv_goods_name" android:layout_width="match_parent"
	    android:layout_marginTop="6dp"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:paddingLeft="12dp"
	    android:paddingRight="12dp"
	    android:textColor="@color/color_333333"
	    android:text="奖品名称"/>
	<RelativeLayout android:layout_width="match_parent"
	    android:paddingLeft="12dp"
	    android:layout_height="wrap_content">
	    <TextView android:id="@+id/tv_point_label" 
	        android:text="积分:"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_333333"
	        android:textSize="14sp"/>
	    <TextView android:id="@+id/tv_point" 
	        android:text="0"
	        android:layout_toRightOf="@id/tv_point_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_f80000"
	        android:textSize="14sp"/>
	    <TextView android:id="@+id/tv_count_label" 
	        android:layout_below="@id/tv_point_label"
	        android:text="数量:"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_333333"
	        android:textSize="14sp"/>
	    <TextView android:id="@+id/tv_count" 
	        android:layout_alignTop="@id/tv_count_label"
	        android:layout_toRightOf="@id/tv_count_label"
	        android:layout_below="@id/tv_point_label"
	        android:text="0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_f80000"
	        android:textSize="14sp"/>
	    <Button android:id="@+id/btn_exchange" 
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:background="@drawable/btn_round_orange_two"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:textColor="@color/white"
	        android:text="兑换"/>
	</RelativeLayout>
</LinearLayout>
