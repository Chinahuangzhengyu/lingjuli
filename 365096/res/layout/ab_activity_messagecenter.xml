<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/root_layout_style"
    android:layout_width="match_parent"
    android:id="@+id/ll_root"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ab_header_bar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/main_bg"></View>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_message"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:tabRippleColor = "@android:color/transparent"
        app:tabIndicatorColor="@color/new_theme_color"
        app:tabIndicatorHeight="4dp"
        android:background="@color/main_bg"
        app:tabIndicator="@drawable/circle_green_6"
        app:tabIndicatorFullWidth="false"
        style="@style/MyTabLayoutTextSize"
        >
    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/main_bg"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_message_content"
        android:layout_width="match_parent"
        android:background="@color/activity_bg"
        android:layout_height="match_parent" />
</LinearLayout>