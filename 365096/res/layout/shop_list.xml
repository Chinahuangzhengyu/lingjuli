<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.zhjl.qihao.abrefactor.view.RoundImageView
        android:id="@+id/img_shop"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginLeft="10dp"
        app:round="6" />

    <TextView
        android:id="@+id/tv_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="¥27.80"
        android:textColor="@color/text_color_f1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/tv_shop_price"
        android:layout_toRightOf="@+id/img_shop"
        android:ellipsize="end"
        android:lines="2"
        android:text=""
        android:textColor="@color/text_color_f1"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_order_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_shop_type"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_return_money_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/new_theme_color2"
            android:textSize="14sp"
            android:visibility="visible" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            ></View>
        <TextView
            android:id="@+id/tv_return_type"
            android:layout_width="84dp"
            android:layout_height="28dp"
            android:background="@drawable/stroke_circle_bbbbbb_20"
            android:gravity="center"
            android:text="退换"
            android:textColor="@color/text_color_f1"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_shop_evaluate"
            android:layout_width="84dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/stroke_circle_green_20"
            android:gravity="center"
            android:text="评价"
            android:textColor="@color/new_theme_color"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_shop_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_shop"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/img_shop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_viewline_3"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:text=""
            android:textColor="@color/bbbbbb"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_shop_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/ff999999"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>