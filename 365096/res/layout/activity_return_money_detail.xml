<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/ab_header_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_return_money_bg">

                <TextView
                    android:id="@+id/tv_return_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="换货成功"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_return_success_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_return_success"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="2019-11-6\u300014:17:25"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/circle_white_6">

                <TextView
                    android:id="@+id/tv_return_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="退款信息"
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <com.zhjl.qihao.view.ListViewForScrollView
                    android:id="@+id/lv_shop_list"
                    android:layout_below="@+id/tv_return_info"
                    android:layout_width="match_parent"
                    android:listSelector="@color/transparent"
                    android:scrollbars="none"
                    android:layout_marginLeft="4dp"
                    android:divider="@null"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content"></com.zhjl.qihao.view.ListViewForScrollView>

                <TextView
                    android:id="@+id/tv_return_money_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lv_shop_list"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:text="退款原因"
                    android:textColor="@color/ff999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_return_money_info_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_return_money_case"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="14dp"
                    android:text=""
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_return_money_info_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:text="申请时间"
                    android:textColor="@color/ff999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_request_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_return_money_info_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="14dp"
                    android:text=""
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request_time"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:text="退款编号"
                    android:textColor="@color/ff999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_return_money_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request_time"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_return_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/circle_white_6">

                <TextView
                    android:id="@+id/tv_return_money_price_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:text="退款金额"
                    android:textColor="@color/ff999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_return_money_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="14dp"
                    android:text=""
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_return_nb_price_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@+id/tv_return_money_price_name"
                    android:layout_marginTop="16dp"
                    android:text="退款N币金额"
                    android:textColor="@color/ff999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_return_nb_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/tv_return_money_price_name"
                    android:layout_marginRight="14dp"
                    android:text=""
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_return_money_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_return_nb_price_name"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:text="退回方式"
                    android:textColor="@color/ff999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_return_money_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_return_nb_price_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="14dp"
                    android:text=""
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_repair_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_return_money_type"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:text="回复内容"
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:layout_below="@+id/tv_repair_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/circle_viewline_6"
                    android:gravity="start"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/text_color_f1"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>