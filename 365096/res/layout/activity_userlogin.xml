<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/root_layout_style"
    android:layout_width="fill_parent"
    android:id="@+id/ll_login"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:text="7好零距离"
            android:textStyle="bold"
            android:textColor="@color/text_color_f1"
            />
        <TextView
            android:id="@+id/tv_login_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="14dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:visibility="gone"
            android:textColor="@color/new_theme_color"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:src="@drawable/img_logo"
        />
    <RadioGroup
        android:id="@+id/rg_login_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        >
        <RadioButton
            android:id="@+id/rb_phone_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号登录"
            android:button="@null"
            android:textSize="18sp"
            android:textColor="@color/text_color_f1"
            android:textStyle="bold"
            android:background="@color/transparent"
            android:drawablePadding="2dp"
            android:drawableBottom="@drawable/circle_green"
            />
        <RadioButton
            android:id="@+id/rb_pwd_login"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@color/transparent"
            android:layout_height="wrap_content"
            android:text="密码登录"
            android:textSize="16sp"
            android:textColor="@color/bbbbbb"
            android:button="@null"
            android:drawablePadding="2dp"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:lines="1"
        android:inputType="number"
        android:textSize="16sp"
        android:nextFocusForward="@+id/et_password"
        android:imeOptions="actionNext"
        android:layout_marginTop="26dp"
        android:layout_marginRight="14dp"
        android:gravity="center_vertical"
        android:maxLength="11"
        android:paddingBottom="12dp"
        android:hint="请输入手机号"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal"
        >
    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:hint="请输入验证码"
        android:maxLength="6"
        android:inputType="text"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        android:background="@null"
        android:lines="1"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_get_sms"
            android:layout_width="98dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/new_theme_color"
            android:textSize="14sp"
            android:background="@drawable/stroke_circle_green_14"
            />
        <ImageView
            android:id="@+id/img_off_eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/img_off_eyes"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>


    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginTop="12dp"
        android:text="忘记密码？"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/new_theme_color"
        android:layout_gravity="right"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="4dp"
        android:enabled="false"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:background="@drawable/circle_d8d8d8_22"
        android:text="注册/登录"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_tourist_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="游客登录"
        android:drawablePadding="6dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_f1"
        android:drawableRight="@drawable/img_login_right"
        />
</LinearLayout>