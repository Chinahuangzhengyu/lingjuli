<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.zhjl.qihao.view.CircleImageView
        android:id="@+id/img_evaluate_head"
        android:layout_width="38dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_height="38dp"
        />
    <LinearLayout
        android:id="@+id/ll_evaluate_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_evaluate_head"
        android:layout_toLeftOf="@+id/tv_evaluate_complaint"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_evaluate_name"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_color_f1"
        />
    <TextView
        android:id="@+id/tv_evaluate_type"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/new_theme_color2"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_evaluate_date"
        android:layout_toRightOf="@+id/img_evaluate_head"
        android:layout_below="@+id/ll_evaluate_name"
        android:layout_toLeftOf="@+id/tv_evaluate_complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:textColor="@color/ff999999"
        />


    <ImageView
        android:id="@+id/tv_evaluate_complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:src="@drawable/img_complaint"
        />
    <TextView
        android:id="@+id/tv_evaluate_content"
        android:layout_below="@+id/tv_evaluate_date"
        android:layout_toRightOf="@+id/img_evaluate_head"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/text_color_f1"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        />
    <com.zhjl.qihao.abrefactor.view.GridViewForScrollView
        android:id="@+id/gv_evaluate_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:visibility="gone"
        android:listSelector="@color/transparent"
        android:horizontalSpacing="10dp"
        android:layout_toRightOf="@+id/img_evaluate_head"
        android:scrollbars="none"
        android:layout_marginRight="14dp"
        android:verticalSpacing="10dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_evaluate_content"
        ></com.zhjl.qihao.abrefactor.view.GridViewForScrollView>
    <View
        android:layout_below="@+id/gv_evaluate_img"
        android:layout_toRightOf="@+id/img_evaluate_head"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"
        android:background="@color/view_line"
        ></View>
</RelativeLayout>