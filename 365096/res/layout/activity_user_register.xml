<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_register_content"
    android:background="@color/white"
    >
    <include layout="@layout/ab_header_bar"></include>
    <ImageView
        android:id="@+id/img_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:src="@drawable/img_logo"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:imeOptions="actionNext"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:lines="1"
        android:inputType="number"
        android:nextFocusForward="@+id/et_sms"
        android:layout_marginTop="26dp"
        android:layout_marginRight="14dp"
        android:maxLength="11"
        android:hint="请输入手机号"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_sms"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:imeOptions="actionNext"
            android:lines="1"
            android:inputType="text"
            android:textSize="16sp"
            android:nextFocusForward="@+id/et_password"
            android:maxLength="6"
            android:background="@null"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_get_sms"
            android:layout_width="98dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/new_theme_color"
            android:textSize="14sp"
            android:background="@drawable/stroke_circle_green_14"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:textSize="16sp"
        android:layout_marginTop="26dp"
        android:imeOptions="actionNext"
        android:lines="1"
        android:paddingBottom="12dp"
        android:inputType="textPassword"
        android:nextFocusForward="@+id/et_sure_password"
        android:layout_marginRight="14dp"
        android:maxLength="20"
        android:hint="请设置6-20位登录密码"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>

    <EditText
        android:id="@+id/et_sure_password"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="14dp"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:lines="1"
        android:inputType="textPassword"
        android:maxLength="20"
        android:hint="请再次确认登录密码"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/view_line"
        ></View>

    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:drawableLeft="@drawable/car_choose"
            android:drawablePadding="10dp"
            android:textColor="@color/text_color_f1"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_register_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="《用户服务协议》"
            android:textColor="@color/new_theme_color"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:background="@drawable/circle_d8d8d8_22"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_is_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#BBBBBB"
        android:text="已有账号？立即登录"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>