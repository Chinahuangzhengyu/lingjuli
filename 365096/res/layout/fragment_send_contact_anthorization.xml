    <include layout="@layout/ab_header_bar"/>

    <include layout="@layout/ab_layout_space"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zhjl.qihao.view.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/contact_headimg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_contact_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/new_theme_color"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/tx_contact_phonenum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="手机号:13888888888"
                android:textColor="@color/ff333333"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/background_color"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_start_invitation"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_orange_bg"
            android:gravity="center"
            android:text="授权"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>