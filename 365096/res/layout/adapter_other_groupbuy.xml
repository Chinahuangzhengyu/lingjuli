<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_comm"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/zwt" />

    <TextView
        android:id="@+id/tv_comm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="105dp"
        android:layout_toRightOf="@+id/iv_comm"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="山东粉水蜜桃好好干哈后果浩浩好好干啊哈"
        android:textColor="@color/Navigate_title"
        android:textSize="14sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comm_name"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_comm">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tuangoubeijing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="团购商品"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_comm"
        android:text="2.8"
        android:textColor="@color/color_goods_ordertv" />

    <TextView
        android:id="@+id/old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_price"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_comm"
        android:text="原价"
        android:textColor="@color/grey_font"
        android:textSize="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/old_price"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_comm"
        android:background="@color/unline" />

</RelativeLayout>