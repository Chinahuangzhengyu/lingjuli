<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff" >

        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:text="距离开始 5天"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/rl_isnew"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="91dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_new_product"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_right_top_red"
                android:gravity="bottom|center_horizontal"
                android:padding="2px"
                android:text="新"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignLeft="@id/tv_new_product"
                android:layout_below="@id/tv_new_product"
                android:src="@drawable/two_triangle_bg" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_goods_image"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/iv_goods_image"
            android:ellipsize="end"
            android:maxLength="20"
            android:maxLines="2"
            android:text="描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述"
            android:textColor="#888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/tv_des"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_goods_image"
            android:text="已售99999999"
            android:textColor="#888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_new_price"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/tv_amount"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_goods_image"
            android:text="¥99999"
            android:textColor="#f80000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_new_price"
            android:gravity="bottom"
            android:text="¥9999999999"
            android:textColor="#888888"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/fl_state_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp" >

            <Button
                android:id="@+id/bt_state_buy"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_round_ff8a80"
                android:focusable="false"
                android:text="马上抢"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_state_wait"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="#ffa666"
                android:focusable="false"
                android:text="未开始"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_state_stop"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="#b3b3b3"
                android:focusable="false"
                android:text="已结束"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="#e8ebf0" />
    </RelativeLayout>

</FrameLayout>