<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_home_address_item"
    android:background="@drawable/circle_white_6"
    android:layout_marginBottom="16dp"
    >
    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        />
    <TextView
        android:layout_toLeftOf="@+id/img_right"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_home_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="贵州省凯里市金泉国际2单元"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/text_color_f1"
        />
    <TextView
        android:id="@+id/tv_user_type"
        android:layout_below="@+id/tv_home_address"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="业主"
        android:textColor="#ffb126"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_is_binding"
        android:layout_below="@+id/tv_home_address"
        android:layout_toRightOf="@+id/tv_user_type"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已绑定"
        android:layout_marginBottom="10dp"
        android:textColor="@color/new_theme_color"
        android:textSize="16sp"
        />

</RelativeLayout>