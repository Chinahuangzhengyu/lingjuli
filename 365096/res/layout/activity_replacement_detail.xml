<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/ab_header_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhjl.qihao.view.ListViewForScrollView
                android:id="@+id/lv_shop_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="14dp"
                android:listSelector="@color/transparent"></com.zhjl.qihao.view.ListViewForScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/view_line"></View>

            <RelativeLayout
                android:id="@+id/rl_shop_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_shop_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textSize="16sp"
                    android:text=""
                    android:textColor="@color/text_color_f1"
                    />
                <TextView
                    android:id="@+id/tv_shop_status_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:layout_toRightOf="@+id/tv_shop_status"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:text=""
                    android:gravity="end"
                    android:textColor="@color/text_color_f1"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>
            <RelativeLayout
                android:id="@+id/rl_return_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_f1"
                    />
                <TextView
                    android:id="@+id/tv_return_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:layout_marginRight="14dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_f1"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>
            <RelativeLayout
                android:id="@+id/rl_lose_money"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退回N币金额"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_f1"
                    />
                <TextView
                    android:id="@+id/tv_lose_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:layout_marginRight="14dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_f1"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款原因"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_f1"
                    />
                <TextView
                    android:id="@+id/tv_case_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择"
                    android:textColor="@color/ff999999"
                    android:textSize="16sp"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/img_bottom_gray"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"
                ></View>
            <TextView
                android:id="@+id/tv_case_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="14dp"
                android:textSize="16sp"
                android:textColor="@color/text_color_f1"
                />
            <EditText
                android:id="@+id/et_return_info_content"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/circle_viewline_6"
                android:gravity="start"
                android:hint="请填写说明缘由"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:text="上传图片"
                android:textColor="@color/text_color_f1"
                android:textSize="16sp"
                />

            <com.zhjl.qihao.abrefactor.view.GridViewForScrollView
                android:id="@+id/gv_upload_replacement_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"></com.zhjl.qihao.abrefactor.view.GridViewForScrollView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/circle_green_22"
            android:text="提交"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>