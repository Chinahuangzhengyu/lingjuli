<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_item"
    android:background="@drawable/circle_white_6"
    >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="@color/text_color_f1"
        android:textStyle="bold"
        />

    <com.zhjl.qihao.abrefactor.view.RoundImageView
        android:id="@+id/img_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/img_loading"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/tv_select_num"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/img_nearby_select"
        android:drawablePadding="4dp"
        android:textSize="14sp"
        android:textColor="@color/ff999999"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />
</LinearLayout>