<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_children"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tx_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13938393939"
                    android:textColor="@color/ff333333"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(家人)"
                    android:textColor="#cccccc" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_class1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:textColor="@color/ff666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_class"
                    android:text="已授权"

                    android:textColor="@color/ff666666"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tx_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="时\u3000间：2014-07-08"
                android:textColor="#cccccc"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/tx_room_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="bottom"
                android:textColor="#cccccc"
                android:textSize="@dimen/text_12" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_cancle_anthorization"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@null"
            android:text="解除授权"
            android:textColor="@color/txred"
            android:textSize="@dimen/text_14" />
    </LinearLayout>
    <!-- android:background="@drawable/ic_my_anthorization_commit"-->


    <include layout="@layout/ab_layout_space" />

</LinearLayout>