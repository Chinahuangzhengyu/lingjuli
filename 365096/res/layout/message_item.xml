<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="16dp"
    android:id="@+id/ll_message_item"
    android:background="@drawable/circle_white_6"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
       <View
           android:id="@+id/v_circle"
           android:layout_width="8dp"
           android:layout_marginRight="4dp"
           android:layout_height="8dp"
           android:background="@drawable/circle_red"
           ></View>
        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券到账提醒"
            android:textSize="16sp"
            android:textColor="@color/text_color_f1"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></View>


        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 9:30"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:textColor="@color/bbbbbb"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_message"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/dplogo"
            />
        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:textColor="#ff666666"
            android:text="今日产品全部大促销，赶快来看看，这里面一定有你想要的东西，想要的实惠，千万不要错过哦~"
            />

    </LinearLayout>
</LinearLayout>