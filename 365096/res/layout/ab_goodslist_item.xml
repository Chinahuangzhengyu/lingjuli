<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goods_logo"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/daojia_cpt" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:background="@color/goodslistbg"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="周黑鸭"
        android:textColor="@color/ff1A1A1A"
        android:textSize="@dimen/text_14" />

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:background="@color/goodslistbg"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现价: ¥489"
                android:textColor="@color/txred"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/goods_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价: ¥489"
                android:textColor="@color/ff999999"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/goods_month_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="月销: 489"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/txred"
            android:textSize="@dimen/text_12" />
    </LinearLayout>

</LinearLayout>