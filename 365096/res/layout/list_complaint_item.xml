<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:id="@+id/complaint_item"
    android:background="@drawable/round_gray_bg"
    >
    <ImageView
        android:id="@+id/head_img"
        android:layout_width="48dp"
        android:layout_margin="20dp"
        android:layout_height="48dp"
        android:src="@drawable/img_head"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_toEndOf="@+id/head_img"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是标题"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_above="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是名称"
        android:textSize="12sp"
        android:layout_below="@+id/tv_title"
        android:layout_toEndOf="@+id/head_img"
        android:layout_marginTop="5dp"
        android:textColor="@color/green"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_above="@+id/ll_content"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表40分钟前"
        />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_below="@+id/head_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxHeight="150dp"
            android:lineHeight="18dp"
            android:textSize="12sp"
            android:lines="5"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/img_content"
            android:layout_width="96dp"
            android:scaleType="fitXY"
            android:layout_height="64dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_status"
        android:layout_above="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已处理"
        android:drawableTop="@drawable/sure_img"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textColor="@color/green"
        />
    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_content"
        android:layout_alignParentEnd="true"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:text="已有234人参与评论"
        android:textSize="10sp"
        android:textColor="@color/green"
        />
</RelativeLayout>