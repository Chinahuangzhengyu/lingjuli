<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView android:id="@+id/iv_goods_pic" 
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" 
            android:background="@color/red"
            android:src="@drawable/logo"/>
        <TextView android:id="@+id/tv_buy_num" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X 1"
            android:textSize="16sp"
            android:paddingRight="12dp"
            android:textColor="@color/color_333333"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_goods_pic"/>
        <TextView android:id="@+id/tv_goods_name" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_goods_pic"
            android:layout_toLeftOf="@id/tv_buy_num"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"
            android:textColor="@color/color_333333"
            android:layout_alignTop="@id/iv_goods_pic"/>
        <TextView android:id="@+id/tv_goods_point1" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_goods_pic"
            android:text="单件积分:"
            android:textSize="14sp"
            android:textColor="@color/color_888888"
            android:layout_alignBottom="@id/iv_goods_pic"/>
        <TextView android:id="@+id/tv_goods_point"
            android:layout_toRightOf="@id/tv_goods_point1" 
            android:layout_alignTop="@id/tv_goods_point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginLeft="5dp"
            android:text="¥0"
            android:textSize="14sp"
            android:layout_alignBottom="@id/iv_goods_pic"/>
    </RelativeLayout>
	<View android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/list_line"
	    />
</LinearLayout>
