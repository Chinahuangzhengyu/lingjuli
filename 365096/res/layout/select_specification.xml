<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_standard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="价\u3000\u3000格"
                android:textColor="@color/ff333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_standard_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="¥0"
                android:textColor="@color/txred"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_standard_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:orientation="vertical"
                android:paddingBottom="5dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="22dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="剩余库存"
                android:textColor="@color/ff333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_standard_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="99"
                android:textColor="@color/txred"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:paddingEnd="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="数\u3000\u3000量"
                android:textColor="@color/ff333333"
                android:layout_weight="1"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_count_minus"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/subtraction_gray"
                android:textColor="@color/font_grey" />

            <EditText
                android:id="@+id/et_count"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="top"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="22"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_count_add"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/plus_blue"
                android:textColor="@color/font_grey" />

            <TextView
                android:id="@+id/tv_quota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:background="#ff0000"
                android:gravity="center"
                android:minHeight="30dip"
                android:minWidth="40dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_line" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/fffd9e44"
            android:text="确\u3000定"
            android:textColor="@color/goodslistbg"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/ll_spec_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_standard_layout"
        android:background="#e0000000" />
</RelativeLayout>