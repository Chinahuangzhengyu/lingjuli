<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_left_right_16"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <GridView
        android:id="@+id/gv_send_note_type"
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="20dp"
        android:layout_marginBottom="36dp"
        android:layout_height="wrap_content">
    </GridView>
    <RelativeLayout
        android:id="@+id/rl_send_note"
        android:layout_width="match_parent"
        android:background="@drawable/circle_gradient_green_6"
        android:gravity="center"
        android:alpha="0.6"
        android:layout_height="68dp">

        <ImageView
            android:id="@+id/img_send_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
        <TextView
            android:id="@+id/tv_send_note"
            android:layout_toRightOf="@+id/img_send_note"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布帖子"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
        <TextView
            android:layout_below="@+id/tv_send_note"
            android:layout_toRightOf="@+id/img_send_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:text="用帖子记录你的美好生活~"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_cancel"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>