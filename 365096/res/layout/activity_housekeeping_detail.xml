<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/root_layout_style" >


	<include layout="@layout/header_bar"/>
    <ScrollView
        android:id="@+id/sv_is_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8ebf0"
        android:padding="4dp"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_enter_company_detail"
                android:layout_width="match_parent"
                android:layout_height="30dp" 
                >

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:text="某某家政公司"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                 <ImageView
                     android:layout_centerVertical="true"
                     android:layout_marginRight="12dp"
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_arrow" />
                
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp" >

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/img_item"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_item"
                    android:text="王阿姨"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/img_item"
                    android:text="44岁"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_age"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/img_item"
                    android:text="湖北  襄樊"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_house_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:text="月嫂"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_house_class"
                    android:layout_marginTop="4dp"
                    android:text="从业1-2年"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp" >

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_hope_price_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期望薪资："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_hope_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/tv_hope_price_name"
                    android:text="1200元/月"
                    android:textColor="#f80000"
                    android:textSize="14sp" />
                
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_call"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_call" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="介绍：2009年-2014年在某某家政公司从事月嫂工作"
                android:textColor="#333333"
                android:textSize="14sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_seletor_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp" >

                <TextView
                    android:id="@+id/tv_time_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_time_name"
                    android:hint="请选择时间"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <RelativeLayout
                
                android:id="@+id/rl_seletor_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                 >

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_plcace_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="地址："
                    android:textColor="#333333"
                    android:textSize="14sp" />
                
                <EditText
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:id="@+id/et_enter_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="请输入地址"
                     android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_plcace_name"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:visibility="gone"
                     android:paddingRight="20dp"
                    android:id="@+id/tv_hope_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_plcace_name"
                    android:text="请选择地址"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <ImageView
                   android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="8dp" >

                <!--
                     <TextView
                    android:id="@+id/tv_remark_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:textColor="#333333"
                    android:textSize="14sp" />
                -->

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tv_bg_border"
                    android:gravity="top"
                    android:hint="说说您的要求"
                    android:maxLines="5"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_commit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_round_ffa666"
                android:text="提交预约"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="提交订单后我们会第一时间与您电话联系"
                android:textColor="#f80000"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>