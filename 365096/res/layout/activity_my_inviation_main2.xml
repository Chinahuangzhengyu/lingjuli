<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/root_layout_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhjl.qihao.invitation.activity.MyInviationMainActivity2">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <!-- 返回图片 -->
        <LinearLayout
            android:id="@+id/ll_head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/inviation_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@drawable/bg_click_selector"
                android:padding="10dp"
                android:scaleType="center"
                android:src="@drawable/ic_back_btn" />
        </LinearLayout>


        <!-- 标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="授权开门"
            android:textColor="@color/Navigate_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/my_inviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="我的授权"
            android:textColor="@color/ff333333"
            android:textSize="16sp" />
    </RelativeLayout>


    <include layout="@layout/ab_layout_space" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/dz_logo" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="请选择你需要授权的类型"
            android:textColor="@color/ff333333"
            android:textSize="@dimen/text_16" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="授权后，家人或租客可以使用零距离相关设备"
            android:textColor="@color/ff333333"
            android:textSize="@dimen/text_16" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="开门并查看物业和小区的相关信息"
            android:textColor="@color/ff333333"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Invite_family"
                style="@style/text_16_ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/round_orange_bg"
                android:gravity="center"
                android:text="授权家人" />


            <Button
                android:id="@+id/btn_Invite_tenant"
                style="@style/text_16_ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_orange_bg"
                android:gravity="center"
                android:text="授权租客" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
