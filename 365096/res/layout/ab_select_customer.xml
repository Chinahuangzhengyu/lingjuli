<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_standard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="电话: 400-036-5096"
            android:textColor="@color/ff333333"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/customer_weixin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="@color/ffd1d1d1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="微信公众号: 七好零距离"
            android:textColor="@color/ff333333"
            android:textSize="@dimen/text_16" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/new_theme_color"
            android:text="关\u3000闭"
            android:textColor="@color/goodslistbg"
            android:textSize="18sp" />
    </LinearLayout>



    <View
        android:id="@+id/ll_spec_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_standard_layout"
        android:background="@color/transparent" />
</RelativeLayout>