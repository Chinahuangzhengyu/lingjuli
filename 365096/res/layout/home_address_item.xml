<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_home_address_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/circle_white_6">

    <TextView
        android:id="@+id/tv_address_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/ff999999"
        android:drawableRight="@drawable/img_address_home"
        android:drawablePadding="6dp"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/tv_address_city_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tv_status"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_address_city"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_color_f1"
        android:textSize="18sp"
        android:gravity="start"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address_city_detail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/ff999999"
        android:textSize="14sp"
         />
    <TextView
        android:id="@+id/tv_address_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_address_name"
        android:layout_below="@+id/tv_address_city_detail"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/ff999999"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/car_choose"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>