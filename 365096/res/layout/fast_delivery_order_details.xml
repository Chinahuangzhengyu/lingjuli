<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
   	<include android:id="@+id/include_header" layout="@layout/header_bar" />
   	<com.zhjl.qihao.view.VerticalScrollView
   	    android:layout_below="@id/include_header"
   	    android:layout_above="@id/ll_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		<LinearLayout android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		
		<LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="10dp">
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/font_grey"
	            android:textSize="16sp"
	            android:text="订单详细"/>
	        <LinearLayout android:layout_width="match_parent"
	            android:orientation="vertical"
	            android:padding="6dp"
	            android:layout_marginTop="5dip"
	            android:background="@drawable/btn_count_bg"
	            android:layout_height="wrap_content">
	            <LinearLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	            	<TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/font_grey"
		                android:textSize="14sp"
		                android:text="支付方式:"/>    
					<TextView android:id="@+id/tv_pay_mode" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="5dip"
		                android:textSize="14sp"
		                android:textColor="@color/font_grey"/>   
	            </LinearLayout>
	            <LinearLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/font_grey"
		                android:textSize="14sp"
		                android:text="订单编号:"/>
	                <TextView android:id="@+id/tv_order_no" 
	                    android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="5dip"
		                android:textSize="14sp"
		                android:textColor="@color/font_grey"/>
	            </LinearLayout>
	            
	            <LinearLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                <TextView  android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:textSize="14sp"
	                	android:textColor="@color/font_grey"
	               		android:text="下单时间:"/>
	                <TextView android:id="@+id/tv_order_time" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/font_grey"
		                android:textSize="14sp"
		                android:layout_marginLeft="5dip"/>
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <View android:layout_width="match_parent"
	        android:layout_height="5dip"
	        android:background="@color/gray"/>
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="10dp">
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/font_grey"
	            android:textSize="14sp"
	            android:text="收货信息"/>
	        <LinearLayout android:id="@+id/ll_consignee_info1" 
	            android:layout_width="match_parent"
	            android:orientation="vertical"
	            android:padding="6dp"
	            android:layout_marginTop="5dip"
	            android:background="@drawable/btn_count_bg"
	            android:layout_height="wrap_content">
	            <LinearLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	            	<TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14sp"
		                android:textColor="@color/font_grey"
		                android:text="收 货  人:"/>    
					<TextView android:id="@+id/tv_consignee" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14sp"
		                android:layout_marginLeft="5dip"
		                android:textColor="@color/font_grey"/>   
	            </LinearLayout>
	            <LinearLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/font_grey"
		                android:textSize="14sp"
		                android:text="收货地址:"/>
	                <TextView android:id="@+id/tv_reciever_address" 
	                    android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="5dip"
		                android:textSize="14sp"
		                android:textColor="@color/font_grey"/>
	            </LinearLayout>
	            
	            <LinearLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                <TextView  android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:textSize="14sp"
	                	android:textColor="@color/font_grey"
	               		android:text="联系电话:"/>
	                <TextView android:id="@+id/tv_contact_numbers" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/font_grey"
		                android:textSize="14sp"
		                android:layout_marginLeft="5dip"/>
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <View android:layout_width="match_parent"
	        android:layout_height="5dip"
	        android:background="@color/gray"/>
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="10dp">
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/font_grey"
	            android:textSize="16sp"
	            android:text="商品清单"/>
	        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/color_e2e2e2" android:layout_marginTop="3dip"/>
	        <com.zhjl.qihao.view.ScrollViewIncludeListView2
	            android:id="@+id/lv_order_goods_list"
	            android:layout_margin="5dip"
	            android:layout_width="match_parent"
	            android:divider="@color/color_e2e2e2"
	            android:cacheColorHint="@null"
	            android:dividerHeight="1px"
	            android:listSelector="@android:color/transparent"
	            android:layout_height="wrap_content"/>
	        <LinearLayout  android:layout_width="match_parent"
	            android:visibility="gone"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	             <TextView android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="16sp"
		            android:textColor="@color/font_grey"
		            android:text="预约时间:"/>
	             <TextView android:id="@+id/tv_reservation_time" android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:padding="5dip"
		            android:textSize="14sp"
		            android:hint="请选择预约时间"
		            android:background="@drawable/btn_count_bg"
		            android:textColor="@color/font_grey"/>
	        </LinearLayout>
	        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/color_e2e2e2" android:layout_marginTop="3dip"/>
	        <LinearLayout android:layout_width="match_parent"
	            android:gravity="right"
	            android:layout_height="wrap_content">
	            <TextView android:layout_width="wrap_content"
	                android:text="总价:"
	                android:textSize="14sp"
	                android:textColor="@color/font_grey"
	                android:layout_height="wrap_content"/>
	            <TextView android:id="@+id/tv_order_amount" android:layout_width="wrap_content"
	                android:text="¥0"
	                android:layout_marginLeft="5dip"
	                android:textSize="14sp"
	                android:textColor="@color/red"
	                android:layout_height="wrap_content"/>
	        </LinearLayout>
	    </LinearLayout>
	    <View android:layout_width="match_parent"
	        android:layout_height="5dip"
	        android:background="@color/gray"/>
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="10dp">
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/font_grey"
	            android:textSize="16sp"
	            android:text="文本留言:"/>

	        <TextView android:id="@+id/tv_text_msg"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_count_bg"
	            android:textSize="14sp"
	            android:ems="10"
	            android:gravity="top"
	            android:hint="无文本留言"
	            android:minLines="3"
	            android:padding="5dip" >
	        </TextView>

	        <LinearLayout android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="12dp"
	            android:orientation="horizontal">
	           	<TextView
	           	    android:layout_width="wrap_content"
	           	    android:layout_height="wrap_content"
	           	    android:text="语音留言:"
	           	    android:textColor="@color/font_grey" />
	        	<com.zhjl.qihao.view.WizardGridView
	        	    android:id="@+id/gv_audio_msg"
	        	    android:numColumns="2"
	        	    android:horizontalSpacing="10dip"
	        	    android:verticalSpacing="10dip"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"/>
	        </LinearLayout>
	    </LinearLayout>
		</LinearLayout>
	</com.zhjl.qihao.view.VerticalScrollView>
</RelativeLayout>
