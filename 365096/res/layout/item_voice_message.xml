<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout android:id="@+id/ll_voice" android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:gravity="center_vertical"
	        android:background="@drawable/btn_count_bg">
	    <ImageView android:id="@+id/iv_voice_icon" 
	        android:layout_width="20dp"
	   	    android:layout_height="20dip"
	   	    android:src="@drawable/paly_icon"/>
	    <TextView android:id="@+id/tv_voice" android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_marginLeft="2dp"
	        android:textColor="@color/font_dark_grey"
	        android:gravity="center_vertical"
	        android:textSize="14sp"
	        android:text="添加语音"/>
	</LinearLayout>
</LinearLayout>
