<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <!-- 填充颜色 -->
                <solid android:color="@color/top_color_click"></solid>
                <!-- 线的宽度，颜色灰色 -->
                <stroke android:width="1dp" android:color="@color/top_color_click"></stroke>
                <corners android:radius="5.0dip" />
            </shape>
        </item>
        <item android:state_enabled="false">
            <shape>
                <!-- 填充颜色 -->
                <solid android:color="@color/btn_pink_enabled"></solid>
                <!-- 线的宽度，颜色灰色 -->
                <stroke android:width="1dp" android:color="@color/btn_pink_enabled"></stroke>
                <corners android:radius="5.0dip" />
            </shape>
        </item>
        <item>
            <shape>
                <!-- 填充颜色 -->
                <solid android:color="@color/top_color"></solid>
                <!-- 线的宽度，颜色灰色 -->
                <stroke android:width="1dp" android:color="@color/top_color"></stroke>
                <corners android:radius="5.0dip" />
            </shape>
        </item>

    </selector>

</inset>