<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="@color/btn_pink_normal"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1dp" android:color="@color/btn_pink_normal"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="@color/btn_pink_normal"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1dp" android:color="@color/btn_pink_normal"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    <item  >
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="@color/btn_pink_enabled"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1dp" android:color="@color/btn_pink_enabled"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    
</selector>