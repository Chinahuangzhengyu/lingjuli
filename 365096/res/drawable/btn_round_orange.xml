<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="@color/orange"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1px" android:color="@color/orange"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    <item android:state_enabled="false" android:state_checked="false">
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="@color/gainsboro"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1px" android:color="@color/gainsboro"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    <item android:state_enabled="false" android:state_checked="true">
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="@color/orange"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1px" android:color="@color/orange"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="@color/orange"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1px" android:color="@color/orange"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    <item >
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="#f7f7f7"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1px" android:color="#dbdbdb"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
</selector>