<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="#FAA66A"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1px" android:color="#FAA66A"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="#FAA66A"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1px" android:color="#FAA66A"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
    <item >
        <shape android:shape="rectangle">
		    
		    <!-- 填充颜色 -->
		    <solid android:color="@color/color_e2e2e2"></solid>
		    <!-- 线的宽度，颜色灰色 -->
		    <stroke android:width="1px" android:color="@color/color_e2e2e2"></stroke>        
		    
		    <!-- 矩形的圆角半径 -->
		    <corners android:radius="3dp" />       
		</shape>
    </item>
</selector>